{%- set domain_controller_count = 1 | default(omit) -%}
{%- set windows_server_count = 0 | default(omit) -%}
{%- set windows_client_count = 1 | default(omit) -%}
WINDOWS_VIRTUAL_MACHINE:
{% if domain_controller_count > 0 -%}
  domain_controller:
    vm_instance_count: {{ domain_controller_count }}
    publisher: "MicrosoftWindowsServer"
    offer: "WindowsServer"
    sku: "2016-Datacenter"
    allow_extension_operations: true
    hotpatching_enabled: false
    license_type: "Windows_Server"
    provision_vm_agent: true
    computer_name: "dc"
    os_disk_size_gb: 128
    tags:
        role: "domain_controller"
{% endif -%}
{% if windows_server_count > 0 -%}
  windows_server:
    vm_instance_count: {{ windows_server_count }}
    publisher: "MicrosoftWindowsServer"
    offer: "WindowsServer"
    sku: "2016-Datacenter"
    allow_extension_operations: true
    hotpatching_enabled: false
    license_type: "Windows_Server"
    provision_vm_agent: true
    computer_name: "srv"
    os_disk_size_gb: 128
    tags:
        role: "windows_server"
{% endif -%}
{% if windows_client_count > 0 -%}
  windows_client:
    vm_instance_count: {{ windows_client_count  }}
    publisher: "MicrosoftWindowsDesktop"
    offer: "windows10preview"
    sku: "win10-22h2-ent"
    allow_extension_operations: true
    hotpatching_enabled: false
    license_type: "Windows_Client"
    provision_vm_agent: true
    computer_name: "win"
    os_disk_size_gb: 128
    tags:
        role: "windows_client"
{% endif -%}